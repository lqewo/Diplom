<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileWorker.Views.NewsUpdatePage"
             Title="Обновление новости">
    <StackLayout Margin="10">
        <Label Text="Название/тема новости" Style="{StaticResource labelName}"/>
        <Entry x:Name="name" Placeholder="Название" MaxLength="40" />

        <Label Text="Содержание новости" Style="{StaticResource labelName}" />
        <Editor x:Name="textEntry" BackgroundColor="#EBEBEB" HeightRequest="150" />

        <StackLayout Margin="10">
            <Label Text="Загрузить новое изображение для новости" Style="{StaticResource labelName}" />
            <Button Text="выбрать" Clicked="Button_Clicked_1" Margin="5" Style="{StaticResource ButtonShop}" />
            <Label x:Name="text" Text="Изображение не выбрано" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>

            <StackLayout Margin="10">
                <Button Text="Обновить новость" Clicked="Button_Clicked" Margin="5" Style="{StaticResource ButtonShop}" />
            </StackLayout>

        </StackLayout>
    </StackLayout>
</ContentPage>