<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileWorker.Views.RestorePasswordPage"
             Title="Смена пароля">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="textLabel" Text="Введите логин и почту привязанную к аккаунту" />

            <Label Text="Логин" Margin="0, 40, 0, 0" />
            <Entry x:Name="loginEntry" Placeholder="Password" IsPassword="True" />

            <Label Text="Email" Margin="0, 40, 0, 0" />
            <Entry x:Name="emailEntry" Placeholder="Password" IsPassword="True" />

            <Label Text="Новый пароль" Margin="0, 5, 0, 0" IsVisible="False" />
            <Entry x:Name="passwordEntry" Placeholder="Confirm password" IsPassword="True" IsVisible="False" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>