<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diplom.Mobile.Views.EditAccountPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Column="0" Grid.Row="0" Margin="10">
            <Label Text="Изменить данные в системе" Margin="10" />
        </StackLayout>

        <ScrollView Grid.Column="0" Grid.Row="1" Margin="0,10,0,0">
            <StackLayout Grid.Column="0" Grid.Row="1" Margin="20">

                <Label Text="Логин" Margin="0, 5, 0, 0" />
                <Entry x:Name="loginEntry" Placeholder="Login" />

                <Label Text="Имя" Margin="0, 5, 0, 0" />
                <Entry x:Name="firstNameEntry" Placeholder="Имя" />

                <Label Text="Фамилия" Margin="0, 5, 0, 0" />
                <Entry x:Name="lastNameEntry" Placeholder="Фамилия" />

                <Label Text="Возраст" Margin="0, 5, 0, 0" />
                <Entry x:Name="yearsEntry" Placeholder="Возраст" />

                <Label Text="Email" Margin="0, 5, 0, 0" />
                <Entry x:Name="emailEntry" Placeholder="Email" />

                <Label Text="Телефон" Margin="0, 5, 0, 0" />
                <Entry x:Name="telefonEntry" Placeholder="Телефон" />

                <Label Text="Пароль" Margin="0, 5, 0, 0" />
                <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

                <Label Text="Повторите пароль" Margin="0, 5, 0, 0" />
                <Entry x:Name="passworAgaindEntry" Placeholder="Confirm password" IsPassword="True" />

                <Button Text="Изменить данные" Clicked="Button_Clicked" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>